<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/paycalculator_sevendata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:visibility="visible"
                card:cardCornerRadius="0dp"
                card:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/feedback_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/feedback_tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:capitalize="words"
                            android:hint="Name"
                            android:inputType="text|textCapWords"
                            android:maxLength="20"
                            android:textColorLink="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/feedback_layout_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/feedback_tv_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:maxLength="12" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/feedback_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/feedback_tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLength="40" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Feedback"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorPrimary" />
                    <EditText
                        android:id="@+id/feedback_tv_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:capitalize="sentences"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:background="@drawable/border_feedback"
                        android:lines="8"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">


                        <Button
                            android:id="@+id/feedback_btn_send"
                            style="@style/BrandButtonStyle"
                            android:fontFamily="sans-serif"
                            android:text="Send"
                            android:layout_margin="3dp"/>

                        <Button
                            android:id="@+id/feedback_btn_clear"
                            style="@style/BrandButtonStyle"
                            android:fontFamily="sans-serif"
                            android:text="Clear"
                            android:layout_margin="3dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
